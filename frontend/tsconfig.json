{
  "compilerOptions": {
    "outDir": "dist/",
    "target": "ES6",
    "module": "NodeNext",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
